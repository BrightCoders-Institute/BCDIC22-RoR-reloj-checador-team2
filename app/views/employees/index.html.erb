<div class="main-container">
  <div class="add-container">
    <div class="add-button">
      <span> + </span>
    </div>
    <div class="add-text-container">
      <%= link_to "Add new employee" , new_employee_path %>
    </div>
  </div>
  <div class="table-container">
    <section class="header-table">
      <ul>
        <li class="header-table-text">
          <p>Email</p>
        </li>
        <li class="header-table-text">
          <p>Name</p>
        </li>
        <li class="header-table-text">
          <p>Position</p>
        </li>
        <li class="header-table-text">
          <p>Number</p>
        </li>
        <li class="header-table-text">
          <p>Private Number</p>
        </li>
        <li class="header-table-text">
          <p>Actions</p>
        </li>
      </ul>
    </section>
    <% @employees.each do |employee| %>
      <section class="employees-table">
        <ul class= "employees-table-list" >
          <li class="employees-table-cell">
            <p><%= employee.email %></p>
          </li>
          <li class="employees-table-cell">
            <p><%= employee.name %></p>
          </li>
          <li class="employees-table-cell">
            <p><%= employee.position %></p>
          </li>
          <li class="employees-table-cell">
            <p><%= employee.employee_number %></p>
          </li>
          <li class="employees-table-cell">
            <p><%= employee.private_number %></p>
          </li>
          <li class="buttons-container">
            <div>
              <button class="button-edit"><%= link_to "Edit", edit_employee_path(employee)%></button>
              <button class="button-delete"><%= link_to "Delete", employee_path(employee), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>
            </div>
          </li>
        </ul>
      </section>
    <%end%>
  </section>
</div>
</div>
